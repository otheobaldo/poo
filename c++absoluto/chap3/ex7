8. int soma(int primeiroNum, int segundoNum, int terceiroNum);
int soma(int primeiroNum, int segundoNum, int terceiroNum)
{
    return primeiroNum + segundoNum + terceiroNum;
}

9. 
char letra(double argumento)
{
    if (argumento > 0)
        return 'P';
    else
        return 'N';
}

